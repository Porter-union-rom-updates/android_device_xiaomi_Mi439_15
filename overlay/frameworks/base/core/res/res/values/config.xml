<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Whether a software navigation bar should be shown. NOTE: in the future this may be
         autodetected from the Configuration. -->
     <bool name="config_showNavigationBar">true</bool>

    <!-- Whether device supports double tap to wake -->
    <bool name="config_supportDoubleTapWake">true</bool>

    <!-- Enables or disables haptic effect when the text insertion/selection handle is moved
         manually by the user. Off by default, since the expected haptic feedback may not be
         available on some devices. -->
    <bool name="config_enableHapticTextHandle">true</bool>
	
    <!-- True if the device supports Sustained Performance Mode -->
    <bool name="config_sustainedPerformanceModeSupported">true</bool>
	
    <!-- Define device configs on boot -->
    <string-array name="device_configs_override">
        <!-- Cache apps freezer -->
        <item>activity_manager_native_boot/use_freezer=true</item>	
		
        <!-- Enable Re-rank oom adjust scores -->
        <item>activity_manager/use_oom_re_ranking=true</item>
		
        <!-- Enable proactive killing cached apps -->
        <item>activity_manager/proactive_kills_enabled=true</item>
		
        <!-- Enable oom_adj_score tiers for cached apps -->
        <item>activity_manager/use_tiered_cached_adj=true</item>
        <item>activity_manager/tiered_cached_adj_decay_time=60000</item>
		
        <!-- LMKD Thrashing Limit Critical -->
        <item>lmkd_native/thrashing_limit_critical=300</item>
    </string-array>
</resources>
